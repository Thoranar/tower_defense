// Projectile definitions with speed, damage, and visual properties
// Contains all projectile types used by weapons and support buildings
// Defines projectile physics and collision properties
{
  // Standard bullet projectile for cannon weapon
  "bullet": {
    "name": "Bullet",
    "description": "Standard projectile fired by cannon",
    "speed": 400,         // pixels per second
    "lifetime": 3.0,      // seconds before auto-despawn
    "radius": 6,          // collision radius in pixels
    "visual": {
      "type": "circle",
      "color": "#ffff00", // yellow
      "size": 6           // visual diameter
    },
    "physics": {
      "piercing": false,  // destroyed on first hit
      "gravity": false,   // unaffected by gravity
      "bounce": false     // no bouncing
    },
    "effects": {
      "trail": false,     // no visual trail
      "explosion": false  // no explosion on impact
    }
  }
}